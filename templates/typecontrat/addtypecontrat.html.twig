{% extends 'base.html.twig' %}

{% block title %}Ajouter Type Contrat{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm p-4">
                {% if addform is defined %} 
                    <h3 class="text-center">Ajouter Type Contrat</h3>
                    {{ form_start(addform) }}
                        <div class="mb-3">
                            {{ form_label(addform.nom, 'Nom du Type Contrat', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(addform.nom, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(addform.nom) }}
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Ajouter Type Contrat</button>
                        </div>
                    {{ form_end(addform) }}
                {% else %}
                    <p class="text-center text-danger">Le formulaire n'est pas disponible.</p>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
